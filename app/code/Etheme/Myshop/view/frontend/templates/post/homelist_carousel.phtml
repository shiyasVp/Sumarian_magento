    <!-- recent-posts-carousel -->
    <div class="container">
        <h1 class="block-title"><?php echo __($this->getTitle()); ?></h1>
        <div class="row">
            <div class="carousel-products-1 carouselTab slick-arrow-top blog-thumb-listing">
                <?php foreach ($_postCollection as $_post) : ?>
