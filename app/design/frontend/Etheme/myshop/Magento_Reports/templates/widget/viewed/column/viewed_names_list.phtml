$ys_helper = $this->helper('Etheme\Myshop\Helper\Data');
$f_open = $ys_helper->getSystemValue('myshop_settings/product_listing/sidebar_collapse');
?>
<?php if (($_products = $block->getRecentlyViewedProducts()) && $_products->getSize()): ?>
<div class="collapse-block<?php if($f_open): ?> open<?php endif; ?> block-viewed-products-names">
    <div class="collapse-block_title">
        <strong><?php /* @escapeNotVerified */ echo __('Recently Viewed') ?></strong>
    </div>
    <div class="collapse-block_content block-content">
        <?php $suffix = $block->getNameInLayout(); ?>
        <ol id="widget-viewed-<?php /* @escapeNotVerified */ echo $suffix; ?>" class="product-items product-items-names">
        <?php foreach ($_products as $_product): ?>
            <li class="product-item">
                <strong class="product-item-name">
                    <a href="<?php /* @escapeNotVerified */ echo $_product->getProductUrl() ?>" class="product-item-link">
                        <?php /* @escapeNotVerified */ echo $this->helper('Magento\Catalog\Helper\Output')->productAttribute($_product, $_product->getName(), 'name') ?>
                    </a>
                </strong>
            </li>
        <?php endforeach; ?>
        </ol>
    </div>
</div>
<?php endif; ?>
