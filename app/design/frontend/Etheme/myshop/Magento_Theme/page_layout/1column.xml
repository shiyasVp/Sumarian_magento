<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="empty"/>

    <referenceContainer name="columns">
        <container name="main.columns.grid-row" htmlClass="row" htmlTag="div">
            <block class="Etheme\Myshop\Block\Template" name="back_link" template="html/back_link.phtml" before="-"/>
            <container name="main.columns.grid-main" htmlId="centerColumn" htmlClass="col-xs-12" htmlTag="div" />
        </container>
    </referenceContainer>
    <move element="main" destination="main.columns.grid-main"/>
</layout>